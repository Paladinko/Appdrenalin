<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fer.marin.appdrenalin.activities.RegistrationActivity">

    <ScrollView
        android:layout_marginTop="@dimen/margin_after_shadow"
        android:id="@+id/registration_scroll_view"
        android:layout_below="@+id/toolbarRegistration"
        android:layout_above="@+id/divider_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_image_view"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/user_icon"
                    android:layout_marginLeft="16dp"
                    android:paddingBottom="5dp"/>

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_name_edit_text"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Korisničko ime"
                    android:singleLine="true"
                    android:textColor="@color/primary_yellow"
                    android:textColorHint="@color/text_grey_2"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_image_view"
                    android:src="@drawable/user_email"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingTop="3dp"/>

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_edit_text"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Email"
                    android:singleLine="true"
                    android:textColor="@color/primary_yellow"
                    android:textColorHint="@color/text_grey_2"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/password_image_view"
                    android:src="@drawable/user_password"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/password_edit_text"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Lozinka"
                    android:singleLine="true"
                    android:textColor="@color/primary_yellow"
                    android:textColorHint="@color/text_grey_2"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/date_icon"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/birthdate_edit_text"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Datum rođenja"
                    android:singleLine="true"
                    android:textColor="@color/primary_yellow"
                    android:textColorHint="@color/text_grey_2"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/town_icon"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/town_edit_text"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Mjesto"
                    android:singleLine="true"
                    android:textColor="@color/primary_yellow"
                    android:textColorHint="@color/text_grey_2"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/world_icon"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/country_edit_text"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Država"
                    android:singleLine="true"
                    android:textColor="@color/primary_yellow"
                    android:textColorHint="@color/text_grey_2"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/privacy_icon"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/privacy_edit_text"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Privatnost"
                    android:singleLine="true"
                    android:textColor="@color/primary_yellow"
                    android:textColorHint="@color/text_grey_2"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/divider_registration"
        android:layout_above="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary_yellow"
        />

    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="REGISTRIRAJ SE"
        android:background="@color/primary_yellow"
        android:layout_alignParentBottom="true"/>


    <include layout="@layout/toolbar"
        android:id="@+id/toolbarRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
